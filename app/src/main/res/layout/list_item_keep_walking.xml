<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_keep_walking_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        tools:text="Keep Walking Title"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/list_item_keep_walking_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crime date"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/list_item_keep_walking_text_view"
        android:paddingLeft="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/list_item_keep_walking_date_text_view"
        android:layout_marginTop="10dp"/>

</RelativeLayout>